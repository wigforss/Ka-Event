<?xml version="1.0"?>
<beans
    xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:kaevent="http://kasource.org/schema/kaevent-spring"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="
http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context-3.0.xsd
http://kasource.org/schema/kaevent-spring
http://kasource.org/schema/kaevent-spring/kaevent-spring.xsd"
>
	
	<context:component-scan base-package="org.kasource.kaevent.example.spring.annotations.cache"/>
	
	<kaevent:kaevent scanClassPath="org.kasource.kaevent.example.spring.annotations.cache"/>
	
	<kaevent:eventQueue id="cacheEventQueue" maxThreads="1"/> 

</beans>
